<hr/> 
<% post.comments.forEach(function (comment, index) { %>
<div style="padding-left:4em">
    <p><img src="<%= comment.head %>" class="l_head" /><a href="<%= comment.website %>"><%= comment.name %></a>
        <span class="info ext-muted"> 回复于 <%= comment.time %></span></p>
    <p><%- comment.content %></p>
</div>
<% }) %>

<form method="post">
<div class="form-group">
    <% if (user) { %>
    <input type="text" name="name" class="form-control" value="<%= user.name %>" placeholder="我的昵称"/>
    <input type="text" name="email" class="form-control" value="<%= user.email %>" placeholder="我的邮箱"/>
    <input type="text" name="website"  class="form-control" value="/u/<%= user.name %>" placeholder="我的网址(可选)" />
    <% } else { %>
    <input type="text" class="form-control" name="name" placeholder="我的昵称" />
    <input type="text" class="form-control" name="email" placeholder="我的邮箱" />
    <input type="text" class="form-control" name="website" value="http://" placeholder="我的网址(可选)" />
    <% } %>
    <textarea name="content" rows="4" class="form-control" placeholder="我想说.."></textarea>
    </div>
    <button type="submit" class="btn btn-success pull-right">提交评论</button>
</form>